<h1>BBC 'Have Your Say' censored comments</h1>
<% if @search %>
  <h2>Search results for '<%= h @search %>'</h2>
  <br/>
<% end %>

<% cache("comment_list_" + @comments.collect { |c| [c.id, c.votes, c.updated_at] }.hash.to_s) do -%>
<%= render :partial => "comment", :collection => @comments %>
<% end -%>

<%= render_partial 'partials/paginator', @comments_pages %>
