if @vote
  page.replace_html "reccounter#{@version.id}", "#{@version.votes + 1} recommendations."
  page.replace_html "recommend-#{@version.id}", "Thanks!"
else
  if @exception.is_a? ActiveRecord::RecordInvalid
    page.replace_html "recommend-#{@version.id}", "You've already recommended this!"
  else    
    page.alert @exception.to_s
  end
end
